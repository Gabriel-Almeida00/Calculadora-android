<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LayVert1"
        android:layout_width="380dp"
        android:layout_height="680dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584">

        <LinearLayout
            android:id="@+id/LayHorz1"
            android:layout_width="385dp"
            android:layout_height="150dp"
            android:background="#80696B"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtResp"
                android:layout_width="370dp"
                android:layout_height="140dp"
                android:background="#FFFFFF"
                android:color="@android:color/black"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:text="0"
                android:textSize="45sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayHorz2"

            android:layout_width="380dp"
            android:layout_height="80dp"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="60dp"
                android:layout_height="58dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"

                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:baselineAligned="false"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="9" />

            <Button
                android:id="@+id/btnBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"

                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayHorz3"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="6" />

            <Button
                android:id="@+id/btnMunti"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="X" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayHorz4"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="3" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayHorz5"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="0" />

            <Button
                android:id="@+id/btnQuad"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="XÂ²" />

            <ImageButton
                android:id="@+id/imageButtonRaiz"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                app:srcCompat="@drawable/simbolo"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnSoma"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayHorz6"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSen"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="Sen"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnCos"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="COS"
                android:textSize="12sp" />


            <ImageButton
                android:id="@+id/imageButtonDel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                app:srcCompat="@drawable/ic_baseline_clear_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C833394A"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>